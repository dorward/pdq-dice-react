{
	"name": "@pdq-dice/server",
	"version": "0.0.0",
	"description": "Server for PDQ Bot",
	"author": "David Dorward <david@dorward.me.uk>",
	"homepage": "",
	"license": "ISC",
	"main": "src/server.js",
	"directories": {
		"lib": "lib"
	},
	"files": [
		"lib"
	],
	"scripts": {
		"start:dev": "nodemon -e ts --watch src --exec npm run start:dist:dev",
		"start:dist:dev": "npm run build && node -r dotenv/config dist/server.js dotenv_config_path=./.env.development",
		"start:dist:staging": "npm run build && node -r dotenv/config dist/server.js dotenv_config_path=./.env.staging",
		"start:dist:production": "node -r dotenv/config dist/server.js dotenv_config_path=./.env",
		"build": "npm run clean && npm run compile",
		"clean": "rm -rf ./dist",
		"compile": "npx tsc -p tsconfig.json",
		"lint:fix": "eslint --fix src/"
	},
	"dependencies": {
		"cors": "^2.8.5",
		"discord.js": "^12.5.3",
		"dotenv": "^9.0.2",
		"express": "^4.17.1",
		"sqlite3": "^5.0.2",
		"typescript": "^4.5.5",
		"uuid": "^8.3.2"
	},
	"devDependencies": {
		"@types/node": "^17.0.15",
		"@types/sqlite3": "^3.1.8",
		"@types/uuid": "^8.3.4",
		"@types/ws": "^7.4.7",
		"@typescript-eslint/eslint-plugin": "^4.28.4",
		"@typescript-eslint/parser": "^4.28.4",
		"discord.js": "^12.5.3",
		"eslint": "^7.31.0",
		"eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
		"kill-port": "^1.6.1",
		"nodemon": "^2.0.7",
		"tsconfig-paths": "^3.9.0",
		"@types/cors": "^2.8.10",
		"@types/express": "^4.17.12",
		"@types/express-serve-static-core": "^4.17.21"
	}
}
